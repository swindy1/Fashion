@{
    Fashion.Models.CountUser_model countUser_model = ViewData["countUser_model"] as Fashion.Models.CountUser_model;
}
@*这里是个人设置里的左边模块的局部页面：关注（数量）、粉丝、提问、回答、收藏、获赞*@
<div id="Left_div" class="Left_div">
    <div class="fixedDiv">
        <div id="touxiangkuang" class="touxiangkuang" onclick="window.location.href = '../People/Index'">
            <img id="theUserTouXiangImg" src="~/Images/ConsultDetails-tu2.png" />
        </div>
        <div class="Left_div_user_name">
            <a id="theUserNameA" href="../People/Index">Linyuanyang</a>
        </div>
        <div class="meau">
            <div class="meau-center1">
                <div class="Peaple_meau" onclick="window.location.href = '../People/Focus'"><em class="People_meau_number">@countUser_model.concernsCount</em><div>关注</div></div>
                <div class="Peaple_meau" onclick="window.location.href = '../People/Fans'"><em class="People_meau_number">@countUser_model.fansCount</em><div>粉丝</div></div>
                <div class="Peaple_meau" onclick="window.location.href = '../People/Topic'"><em class="People_meau_number">0</em><div>话题</div></div>
            </div>
            <div class="meau-center2">
                <div class="Peaple_meau" onclick="window.location.href = '../People/myAsks'"><em class="People_meau_number">@countUser_model.zhuTieCount</em><div>提问</div></div>
                <div class="Peaple_meau" onclick="window.location.href = '../People/myAnswers'"><em class="People_meau_number">@countUser_model.replyCount</em><div>回答</div></div>
                <div class="Peaple_meau" onclick="window.location.href = '../People/myCollection'"><em class="People_meau_number">@countUser_model.collectCount</em><div>收藏</div></div>
                <div class="Peaple_meau" onclick="window.location.href = '../People/Get_Approval'"><em class="People_meau_number">@countUser_model.supportCount</em><div>获赞</div></div>
            </div>
        </div>
    </div>
</div>
<style>
    .Right_div {
        width: 700px;
        height: auto;
        padding: 0 0 100px 100px;
        float: left;
        font-style: normal;
        margin: 65px 0 0 280px;
        font-size: 1em;
        float: left;
    }
</style>
<style>
    /*标签栏的样式*/
    .tab_bar h2 {
        font-weight: lighter;
        padding: 20px 15px 20px 15px;
        margin-bottom: 0;
        cursor: pointer;
        float: left;
        font-size: 22px;
    }

        .tab_bar h2:hover {
            border-bottom: 2px solid black;
        }

    .tab_bar {
        width: 100%;
        border-bottom: 1px solid gray;
        float: left;
        margin-bottom: 30px;
    }

    .tab_ing {
        font-weight: bold;
        border-bottom: 2px solid black;
    }
</style>

<style>

    .Left_div {
        background-color: white;
        font-style: italic;
        width: 320px;
        float: left;
        -webkit-box-shadow: 1px 3px 6px 1px gray;
        -moz-box-shadow: 1px 3px 6px 1px gray;
        box-shadow: 1px 3px 6px 1px gray;
        font-family: 'Adobe Song Std';
        height:1000px;
        position:fixed;
        margin-top:71px;
    }

    .touxiangkuang {
        width: 200px;
        margin: 60px 60px 25px 60px;
        border-radius: 1200px;
        cursor: pointer;
    }

        .touxiangkuang img {
            width: 100%;
            border-radius: 1200px;
            height: 100%;
        }

    .Left_div_user_name {
        font-size: 25px;
        text-align: center;
    }

        .Left_div_user_name a {
            text-decoration: none;
            color: black;
        }

    .meau {
        font-size: 9px;
        text-align:center;
        float:left;
    }

    .Peaple_meau {
        float: left;
        border-right: 1px solid gray;
        padding: 0 15px;
        cursor: pointer;
        margin-top: 20px;
        color: #808080;
    }

        .Peaple_meau:hover {
            color: black;
        }
    .People_meau_number {
        font-size: 3em;
    }
    .fixedDiv, #HeaderAll{
        position: fixed;
    }
    .meau-center1 {
        margin-left:75px;
    }
    .meau-center2 {
        margin-left: 45px;
    }
</style>
