@{
    ViewBag.Title = "MySpecialConsultExpertList";
    Layout = "~/Views/Shared/Header.cshtml";
    @model System.Collections.Generic.List<Fashion.Models.SpecialConsultAnswer_model>
    Fashion.Models.SpecialConsult_model specialConsult_model = ViewData["specialConsult_model"] as Fashion.Models.SpecialConsult_model;
}

<script src="~/Scripts/jquery-2.0.0.min.js"></script>
<link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap/bootstrap.min.js"></script>

<div class="container">
    <div style="height:100px;">

    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-10 col-xs-offset-1" style=" margin-top: 30px; border-bottom:2px solid #a39393;">
            </div>
            <div class="col-xs-8 col-xs-offset-1" style="height: 50px; margin-top: 6px; font-size: 25px; padding-top: 10px; ">
                我的特定咨询：@specialConsult_model.caption
            </div>
            
            <div class="col-xs-6 col-xs-offset-2" style=" margin-top: 6px; font-size: 25px; padding-top: 0px; ">
                场合：@specialConsult_model.occasion
            </div>
            <div class="col-xs-6 col-xs-offset-2" style=" font-size: 25px; margin-top:5px;">
                描述：@specialConsult_model.detail
            </div>
            <div class="col-xs-6 col-xs-offset-2" style=" font-size: 25px; margin-top:5px;">
                日期：@specialConsult_model.datetime
            </div>
            <div class="col-xs-10 col-xs-offset-1"  style=" margin-top: 30px; border-bottom:2px solid #a39393;">
            </div>
            <div class="col-xs-6 col-xs-offset-1" style="font-size: 25px; padding-top: 10px; margin-top:10px;">
                我选择的专家的解答：
            </div>
        </div>
    </div>
    
        <div class="row" style="margin-top:25px;margin-left:100px;text-align:center;padding:0px;font-size:21px;">
            @{int i = 0;}
            @foreach (Fashion.Models.SpecialConsultAnswer_model specialConsultAnswer_model in Model)
            {
                i++;
            <div class="col-xs-5" style="border: 1px solid blue; padding:0px;margin-left:25px;">
                <div class="col-xs-12" style="border: 1px solid blue; height: 80px; padding:0px;">
                    <div class="col-xs-2" style="border-right:1px solid blue;height:80px;font-size:18px;padding:0px;padding-top:25px;">
                       专家 @i
                    </div>
                    <div class="col-xs-2" style="height:80px;padding:0px;border-right:1px solid blue;">
                        <img src="@specialConsultAnswer_model.expert_model.touXiangUrl" title="专家头像"  style="width:100%;height:100%;"/>

                        
                    </div>
                    <div class="col-xs-4" style="padding:18px;border-right:1px solid blue;height:80px;">
                        专家名:@specialConsultAnswer_model.expert_model.userName
                    </div>
                    <div class="col-xs-4" style="padding: 10px; height: 80px; " onclick="window.location.href ='../Consult/ConsultDetails?specialConsultId=@ViewData["specialConsultId"]&expertUserName=@specialConsultAnswer_model.expert_model.userName'">
                        <a href="../Consult/ConsultDetails?specialConsultId=@ViewData["specialConsultId"]&expertUserName=@specialConsultAnswer_model.expert_model.userName">点击进入查看详情</a>
                        
                    </div>
                </div>
               
                <div class="col-xs-12" style="border: 1px solid blue; height: 160px; padding:0px;">
                    <div class="col-xs-2 " style="border-right:1px solid blue;height:160px;padding-top:16px;">
                        搭配套装
                    </div>
                    <div class="col-xs-10 " style="height:160px;padding:0px;font-size:28px;padding-top:20px;">
                        @foreach(Fashion.Models.SpecialConsultAnswerClothes_model specialConsultAnswerClothes_model in specialConsultAnswer_model.clothList_model)
                        {
                            <div class="col-xs-3 " style="height:40px;">
                                <a href="@specialConsultAnswerClothes_model.clothUrl" title="点击购买" target="_blank">@specialConsultAnswerClothes_model.clothType</a>
                        </div>    
                        }
                    </div>
                </div>
                <div class="col-xs-4 col-xs-offset-4" style="padding:10px;font-weight:bolder;" onclick="alert('如果您对此专家推荐的搭配套装满意的话，请点击确定，点击确定后，您支付的费用将给此专家！');">
                   选择此套装
                </div>
            </div>
            }
                
            </div>
    
    
    
    

    <div style="height:300px;">

    </div>
</div>